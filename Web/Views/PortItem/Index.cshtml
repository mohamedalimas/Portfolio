@model IEnumerable<PortItem>

@{
    ViewData["Title"] = "Index";
}
 
<div style="margin:200px 100px">
    <p>
        <a class="btn btn-info" asp-action="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.name)
                </th>
                <th style="width:50%">
                    @Html.DisplayNameFor(model => model.description)
                </th>
                <th>
                    Image
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.description)
                </td>
                <td>
                    @if(item.ImageUrl!=null){
                    <img class="img-thumbnail" style="width:64px" src="/img/portfolio/@item.ImageUrl" />
                    }
                </td>
                <td>
                    <a class="btn btn-info me-2" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-info me-2" asp-action="Details" asp-route-id="@item.Id">Details</a>
                    <a class="btn btn-danger me-2" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>
