@model PortItemViewModel

@{
    ViewData["Title"] = "Edit";
}

<div style="margin:200px 100px">
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="PortId" class="control-label"></label>
                <input asp-for="PortId" readonly class="form-control" />
                <span asp-validation-for="PortId" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="name" class="control-label"></label>
                <input asp-for="name" class="form-control" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="description" class="control-label"></label>
                <input asp-for="description" class="form-control" />
                <span asp-validation-for="description" class="text-danger"></span>
            </div>
            <img class="img-thumbnail" style="width:128px" src="/img/portfolio/@Model.ImgUrl" />
            <input asp-for="ImgUrl" class="form-control" hidden />
            <div class="form-group mb-3">
                <label asp-for="file" class="control-label"></label>
                <input asp-for="file" class="form-control" />
                <span asp-validation-for="file" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-info ms-2">Back to List</a>
            </div>
        </form>
    </div>
</div>
</div>
@section Scripts {
    <partial name="_validation" />
}
